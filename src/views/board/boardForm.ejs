<link rel="stylesheet" type="text/css" href="/public/css/views/boardForm.css">
<script src="/public/js/boardForm.js"></script>

<h3>글쓰기</h3>
<div class="boardContainer">
    <form id="boardForm" method="post" enctype="multipart/form-data"  action="/board/boardWrite">
        <div class="categoryContainer">
            <label for="category">카테고리 : </label>
            <select id="category" name="category" class="category">
                <option value="buy">일반</option>
                
                <% if(user.ADMIN == 1) {%>
                <option value="notice">공지</option>
                <option id="SELL" value="sell">판매</option> 
                <% }else if(user.SELLER === "sell") { %>
                <option id="SELL" value="sell">판매</option> 
                <% } %>
               
            </select><br><br>
            <label for="title">제목 : </label>
            <input id="title" name="title" class="title" type="text" placeholder="제목을 입력해주세요">
        </div>
        <hr>
        
        <div class="textContainer">
            <label for="txt">내용</label><br>
            <textarea id="txt" class="textArea" name="content" maxlength="4000"></textarea>
        </div>
        
        <hr>
        <div class="uploadContainer">
            <label for="upload">사진 업로드</label><br>
            <input type="file" id="upload" name="fileUp" onchange="readFile(this)" multiple>
            <div>
                <img id="imgView" src="" width="100" height="100">
            </div>
        </div>
        
        <% if(user.SELLER === "sell") { %>
        <hr>
        <div id="thumbnailbox">
            <label for="thumbnailCheck">썸네일 넣기</label>
            <input id="thumbnailCheck" type="checkbox">
            <div id="thumbnailContainer">
                <label>썸네일파일첨부</label><br>
                <input type="file" id="thumbnail" name="thumbnailFile" onchange="thumReadFile(this)">
                <div>
                    <img id="thumbnailView" src="" width="100" height="100">
                </div>
            </div>
        </div>
        <% } %>
        <hr>
        <div class="save">
             <input type="button" onclick="formCheck()" value="작성 완료"> &nbsp;
            <button type="reset">다시 입력</button> &nbsp;
            <button type="button" onclick="location.href='/board/boardList';">목록 보기</button>
        </div>
    </form>
</div>
    