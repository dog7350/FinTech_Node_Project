<link rel="stylesheet" type="text/css" href="/public/css/default/loginModal.css">

<div id="modalBackground">
    <div id="modalContainer">
        <div id="loginDiv" class="rounded">
            <form id="loginForm" class="p-3 bg-info bg-opacity-10 border border-info rounded" action="/member/login" method="post">
                <div class="mb-3">
                    <label for="idTxt" class="form-label">아이디</label>
                    <input id="idTxt" class="form-control" type="text" name="id" placeholder="Input ID" required>
                </div>
            
                <div class="mb-3">
                    <label for="pwTxt" class="form-label">비밀번호</label>
                    <input id="pwTxt" class="form-control" type="password" name="pw" placeholder="Input PW" required>
                </div>
                
                <div class="d-grid gap-2">
                    <input class="btn btn-primary" type="submit" value="로그인">
                    <input type="button" class="btn btn-danger" value="취소" onclick="hideLoginModal()">
                </div>
            </form>
        </div>
    </div>
</div>