<link rel="stylesheet" type="text/css" href="/public/css/views/joinForm.css">
<script src="/public/js/joinForm.js"></script>

<form id="joinForm" action="/member/join" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="idTxt" class="form-label">아이디</label>
        <input class="btn btn-success" type="button" onclick="openIdCheck()" value="중복검사" style="float: right;">
        <input id="idTxt" class="form-control" type="text" name="id" placeholder="Input ID" required>
    </div>

    <div class="mb-3">
        <label for="pwTxt" class="form-label">비밀번호</label>
        <input id="pwTxt" class="form-control" type="password" name="pw" placeholder="Input PW" required>
    </div>

    <div class="mb-3">
        <label for="nickTxt" class="form-label">닉네임</label>
        <input id="nickTxt" class="form-control" type="text" name="nick" placeholder="Input Nick Name" required>
    </div>

    <div class="mb-3">
        <label for="nameTxt" class="form-label">이름</label>
        <input id="nameTxt" class="form-control" type="text" name="name" placeholder="Input NAME" required>
    </div>

    <div class="mb-3">
        <label for="phoneTxt" class="form-label">휴대폰 번호</label>
        <input id="phoneTxt" class="form-control" type="text" name="phone" placeholder="Input Phone Number" required>
    </div>

    <div class="mb-3">
        <label for="emailTxt" class="form-label">이메일</label>
        <input class="btn btn-success" type="button" onclick="mailAuth()" value="이메일 인증" style="float: right;">
        <input id="emailTxt" class="form-control" type="email" name="email" placeholder="Input E-Mail" required>
    </div>

    <div class="mb-3">
        <label for="addrBtn" class="form-label">주소</label>
        <input id="addrBtn" class="btn btn-success" type="button" onclick="openJuso()" value="검색" style="float: right;">
        <input id="zipCode" class="form-control" type="text" name="zipCode" placeholder="zipCode" onclick="openJuso()" readonly required>
        <input id="addr" class="form-control" type="text" name="addr" placeholder="Input Address" onclick="openJuso()" readonly required>
        <input id="addrDetail" class="form-control" type="text" name="addrDetail" placeholder="Detail Address" onclick="openJuso()" readonly required>
    </div>

    <select id="sel" class="form-select" name="seller" required>
        <option selected>회원 유형 선택</option>
        <option value="buy">일반</option>
        <option value="sell">판매</option>
    </select>

    <br><hr><br>

    <div class="mb-3">
        <label for="profileFile" class="form-label">프로필 사진 업로드</label><br>
        <div style="margin-bottom: 10px; text-align: center;">
            <img id="preview" class="img-thumbnail" src="" width="500" height="500" alt="이미지가 없습니다.">
        </div>
        <input class="form-control" type="file" name="file_name" onchange="readURL(this)">
    </div>
    <br><hr><br>
    <div class="d-grid gap-2">
        <input class="btn btn-primary" type="submit" value="회원가입" onclick="submitForm()">
    </div>
</form>