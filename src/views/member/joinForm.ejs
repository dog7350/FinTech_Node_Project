<link rel="stylesheet" type="text/css" href="/public/css/views/joinForm.css">
<script src="/public/js/joinForm.js"></script>

<form id="joinForm" action="/member/join" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <input type="text" name="id" placeholder="Input ID" required>
    </div>
    <input type="password" name="pw" placeholder="Input PW" required><br>
    <input type="text" name="name" placeholder="Input NAME" required><br>
    <input type="text" name="phone" placeholder="Input Phone Number" required><br>
    <input type="email" name="email" placeholder="Input E-Mail" required><br>
    <input type="text" name="addr" placeholder="Input Address" required><br>
    <input type="text" name="nick" placeholder="Input Nick Name" required><br>
    <select name="seller" required>
        <option value="buy">일반</option>
        <option value="sell">판매</option>
    </select><br><br>
    <hr><br>
    <img src="" id="preview" width="100" height="100" alt="이미지가 없습니다."><br>
    <input type="file" name="file_name" onchange="readURL(this)"><br><br>
    <hr><br>
    <input type="submit" value="회원가입">
</form>